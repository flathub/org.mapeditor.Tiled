{
  "app-id": "org.mapeditor.Tiled",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "command": "tiled",
  "rename-icon": "tiled",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--share=ipc",
    "--share=network",
    "--device=dri",
    "--filesystem=host"
  ],
  "cleanup": [
    "/share/man",
    "/share/thumbnailers"
  ],
  "modules": [
    {
      "name": "qbs",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.qt.io/official_releases/qbs/1.20.0/qbs-src-1.20.0.tar.gz",
          "sha256": "44961a4bb61580ae821aaf25ebb5a5737bd8fb79ec0474aa2592cdd45cc5171f"
        },
        {
          "type": "script",
          "dest-filename": "configure",
          "commands": [
            "qmake QBS_INSTALL_PREFIX=/app CONFIG+=qbs_enable_project_file_updates qbs.pro"
          ]
        }
      ]
    },
    {
      "name": "tiled",
      "buildsystem": "simple",
      "build-commands": [
        "qbs setup-toolchains --detect",
        "qbs --no-install config:release qbs.installPrefix:/app ",
        "qbs install --no-build --install-root / config:release"
      ],
      "post-install": [
        "sed -i 's/application-x-tiled/org.mapeditor.Tiled-mimetype/g' /app/share/mime/packages/org.mapeditor.Tiled.xml",
        "for size in 16x16 32x32; do
          mv /app/share/icons/hicolor/$size/mimetypes/{application-x-tiled,org.mapeditor.Tiled-mimetype}.png
        done",
        "mv /app/share/icons/hicolor/scalable/mimetypes/{application-x-tiled,org.mapeditor.Tiled-mimetype}.svg",
        "for size in 64 128; do
          rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/tiled.svg
          install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/tiled.png
        done"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/mapeditor/tiled/archive/refs/tags/v1.8.4.tar.gz",
          "sha256": "60d98f0845ffe967cc6eb75f49a20bd61a06c5e9b5488b3ec1ef7a0737410ebf"
        }
      ]
    }
  ]
}
