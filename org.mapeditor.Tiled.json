{
    "app-id": "org.mapeditor.Tiled",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "tiled",
    "rename-icon": "tiled",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=host"
    ],
    "cleanup": [
        "/share/man",
        "/share/thumbnailers"
    ],
    "modules": [
        {
            "name": "qbs",
            "buildsystem": "cmake",
            "config-opts": [
                "-DWITH_TESTS=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/qbs/qbs/archive/refs/tags/v2.6.1.tar.gz",
                    "sha256": "bca391dd01168e075305baddcef7d4cf0a00b8543ee70b43942817db72d64904"
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "qaseprite",
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DUSE_SHARED_ZLIB=on",
                "-DUSE_SHARED_PIXMAN=on",
                "-DUSE_SHARED_FREETYPE=on",
                "-DUSE_SHARED_HARFBUZZ=on",
                "-DQT_PLUGIN_PATH=/app/lib/plugins"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mapeditor/qaseprite",
                    "tag": "1.0.1",
                    "commit": "d2ba81f7d0c3329bfba015f9cb07527a9c9d743a"
                }
            ]
        },
        {
            "name": "tiled",
            "buildsystem": "simple",
            "build-commands": [
                "qbs setup-toolchains --detect",
                "qbs --no-install config:release qbs.installPrefix:/app",
                "qbs install --no-build --install-root / config:release"
            ],
            "post-install": [
                "sed -i 's/application-x-tiled/org.mapeditor.Tiled.application-x-tiled/g' /app/share/mime/packages/org.mapeditor.Tiled.xml",
                "for size in 16x16 32x32; do\n mv /app/share/icons/hicolor/$size/mimetypes/{application-x-tiled,org.mapeditor.Tiled.application-x-tiled}.png\n done",
                "mv /app/share/icons/hicolor/scalable/mimetypes/{application-x-tiled,org.mapeditor.Tiled.application-x-tiled}.svg",
                "for size in 64 128; do\n rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/tiled.svg\n install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/tiled.png\n done"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mapeditor/tiled.git",
                    "commit": "93fb1e926556794ef3298f8c2b0916105dec47c2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 7298,
                        "tag-template": "v$version",
                        "url-template": "https://github.com/mapeditor/tiled/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        }
    ]
}
